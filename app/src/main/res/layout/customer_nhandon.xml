<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="20dp"
    android:background="#559FEC">

    <ImageView
        android:id="@+id/img_custom_notification"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:src="@drawable/hell"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/tv_day"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/img_custom_notification"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="14sp"
            android:text="Tinh trang đơn" />
        <TextView
            android:id="@+id/tv_chuyenmondon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="14sp"
            android:text="Chuyên môn"/>

    </LinearLayout>
    <TextView
        android:id="@+id/tv_day"
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="14sp"
        android:text="20/12/2023"/>

</RelativeLayout>